generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Portfolio {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  assets      Asset[]
}

model Asset {
  id           String   @id @default(cuid())
  name         String
  ticker       String
  type         String   // stock, etf, crypto, real_estate, savings
  quantity     Float
  buyPrice     Float
  buyDate      DateTime
  currentPrice Float
  currency     String   @default("EUR")
  category     String?
  notes        String?
  portfolioId  String
  portfolio    Portfolio @relation(fields: [portfolioId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model MarketData {
  id            String   @id @default(cuid())
  ticker        String
  price         Float
  change        Float
  changePercent Float
  volume        Float?
  timestamp     DateTime @default(now())
}

model NewsItem {
  id             String   @id @default(cuid())
  title          String
  description    String?
  url            String
  source         String
  imageUrl       String?
  category       String?
  publishedAt    DateTime @default(now())
  relevanceScore Float    @default(0)
}

model InvestorProfile {
  id                String   @id @default(cuid())
  riskTolerance     String
  investmentHorizon String
  experience        String
  objectives        String?
  score             Float    @default(0)
  createdAt         DateTime @default(now())
}

model WatchlistItem {
  id      String   @id @default(cuid())
  ticker  String
  name    String
  type    String
  addedAt DateTime @default(now())
}
